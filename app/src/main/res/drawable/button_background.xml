<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Flat blue color when pressed -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Flat blue color when not pressed -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
